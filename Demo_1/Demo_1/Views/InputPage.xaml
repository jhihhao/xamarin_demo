<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo_1.Views.InputPage">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Please Entry a number!" TextColor="White" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Label Grid.Row="0" Grid.Column="0" Text="Number:" HorizontalOptions="Center"/>
            <Entry Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="entryNum" TextColor="Black" HorizontalOptions="FillAndExpand" PlaceholderColor="Gray" BackgroundColor="White"/>
            <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="Check number" TextColor="Black" x:Name="btnCheckNum" Clicked="BtnCheckNum_Clicked"/>
            <Label Grid.Row="3" Grid.Column="0" Text="Check result: " TextColor="White"/>
            <Label Grid.Row="3" Grid.Column="1" TextColor="White" Text="" x:Name="checkResult"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>